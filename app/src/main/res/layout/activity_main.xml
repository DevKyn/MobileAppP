<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background12"
    android:orientation="vertical"
    tools:context=".main">

    <TextView
        android:id="@+id/services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/font2"
        android:text="Services"
        android:textSize="35dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonHair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton
        android:id="@+id/imageButtonHair"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/services"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/hairicon"
        android:background="#00000000"
        />

    <TextView
        android:id="@+id/hairText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font2"
        android:text="Hair services"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonHair" />

    <ImageButton
        android:id="@+id/imageButtonMakeup"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/hairText"
        android:layout_gravity="center"
        android:background="#00000000"
        android:onClick="makeupinterface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hairText"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/makeupicon"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/makupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MakeUp services"
        android:textColor="@color/black"
        android:fontFamily="@font/font2"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonMakeup" />


</androidx.constraintlayout.widget.ConstraintLayout>